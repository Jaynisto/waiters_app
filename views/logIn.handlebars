    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/waiters.css">
    <title>Log In</title>
</head>
<body>
    <div class="navBar" id="nv">
        <nav>
            <i class="bi bi-justify" onclick="alert('heelo')" id="hamMenu"></i>
            <ul>
                <!-- main nav section -->
                <li><a href='/'>HOME </a></li>
                <li><a href="/signInUser">SIGN IN AS WAITER</a></li>
            </ul>
        </nav>
    </div><br>
       
    <div class="login-box">
        <h2>Login</h2>
        <form action="login" method="POST">
        <div class="user-box">
            <input type="password" name="code" id="password">
            <label>Password</label>
        </div>

        <span class="error-form">
            <div class="successMessage">
                {{messages.success}}
            </div>
            <div class="errorMessage">
                {{messages.error}}
            </div><br>
        </span><br>

        <button class="waiterLogin" type="submit">Log in</button> 

    </form>

    </div>

</body>
